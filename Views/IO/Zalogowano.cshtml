@{
    ViewData["Title"] = "Zalogowano";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quizzler</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <nav class="top-nav">
        <div class="nav-content">
            <a href="/Home/Index" class="nav-logo">
                <div class="logo-icon">
                    <span class="material-icons">quiz</span>
                </div>
                <span class="logo-text">QUIZZLER</span>
            </a>
            <div class="nav-links">
                <a href="/Home/Index" class="nav-link">Home</a>
                @if (Context.Session.GetString("_UserRole") == "admin")
                {
                    <a href="/Quiz/Index" class="nav-link">Quizy</a>
                }
                <a href="/Solve/Index" class="nav-link">Rozwiąż Quiz</a>
                <a href="/Scores/Index" class="nav-link">Wyniki</a>
                @if (Context.Session.GetString("_UserRole") == "admin")
                {
                    <a href="/DataManager/Index" class="nav-link">Panel Admina</a>
                }
            </div>
            <div class="nav-right">
                <form method="post" asp-action="Wyloguj" class="logout-form">
                    <button type="submit" class="btn-login">Wyloguj</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="welcome-banner">
        <div class="banner-content">
            <h1 class="app-title">QUIZZLER</h1>
            <p class="banner-text">Twórz niezapomniane quizy i sprawdzaj wiedzę w wyjątkowy sposób</p>
        </div>
    </div>
</body>

</html>
