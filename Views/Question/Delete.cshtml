@model MvcPracownicy.Models.Question

@{
    ViewData["Title"] = "Delete Question";
}

<h1>Delete Question</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this question?</h3>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Content</h5>
        <p class="card-text"><small class="text-muted">Answers: @Model.Answers.Count</small></p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Quiz" asp-action="Details" asp-route-id="@Model.QuizId" class="btn btn-secondary">Back to Quiz</a>
</form> 