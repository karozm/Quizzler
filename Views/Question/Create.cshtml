@model MvcPracownicy.Models.Question

@{
    ViewData["Title"] = "Create Question";
    Layout = "_AuthenticatedLayout";
}

<div class="quiz-form-container">
    <h1>Create New Question</h1>

    <form asp-action="Create" id="questionForm" class="quiz-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" name="QuizId" value="@ViewBag.QuizId" />

        <div class="form-group">
            <label asp-for="Content" class="control-label">Question Text</label>
            <textarea asp-for="Content" class="form-control" rows="3" placeholder="Enter your question" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <h3 class="mt-4">Answer Choices</h3>
        <div class="answers-section">
            @for (int i = 0; i < 4; i++)
            {
                <div class="form-group">
                    <div class="answer-input-group">
                        <div class="answer-radio">
                            <input type="radio" name="CorrectAnswerIndex" value="@i" class="form-check-input"
                                @(i == 0 ? "checked" : "") required />
                            <label class="form-check-label">Correct Answer</label>
                        </div>
                        <input type="text" name="Answers" class="form-control" placeholder="Answer @(i + 1)" required />
                    </div>
                </div>
            }
        </div>

        <div class="quiz-form-actions">
            <button type="submit" class="btn-primary">
                <span class="material-icons">add_circle</span>
                Create Question
            </button>
            <a asp-controller="Quiz" asp-action="Details" asp-route-id="@ViewBag.QuizId" class="btn-secondary">
                <span class="material-icons">arrow_back</span>
                Back to Quiz
            </a>
        </div>
    </form>
</div>

<style>
    .answers-section {
        background-color: rgba(255, 255, 255, 0.5);
        padding: 1.5rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
    }

    .answer-input-group {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .answer-radio {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        min-width: 140px;
    }

    .answer-radio input[type="radio"] {
        margin: 0;
    }

    .answer-radio label {
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }

    h3 {
        color: rgb(75, 8, 88);
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('questionForm');
            const answerInputs = document.querySelectorAll('.answer-input');

            form.addEventListener('submit', function (e) {
                let hasEmptyAnswers = false;
                answerInputs.forEach(input => {
                    if (!input.value.trim()) {
                        hasEmptyAnswers = true;
                    }
                });

                if (hasEmptyAnswers) {
                    e.preventDefault();
                    alert('Please fill in all answer choices.');
                }
            });

            // Prevent duplicate answers
            answerInputs.forEach(input => {
                input.addEventListener('input', function () {
                    const currentValue = this.value.trim();
                    answerInputs.forEach(otherInput => {
                        if (otherInput !== this && otherInput.value.trim() === currentValue) {
                            this.setCustomValidity('This answer is already used');
                        } else {
                            this.setCustomValidity('');
                        }
                    });
                });
            });
        });
    </script>
}