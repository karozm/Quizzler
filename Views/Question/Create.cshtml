@model MvcPracownicy.Models.Question

@{
    ViewData["Title"] = "Create Question";
    Layout = "_AuthenticatedLayout";
}

<div class="quiz-container">
    <form asp-action="Create" id="questionForm" class="question-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" name="QuizId" value="@ViewBag.QuizId" />

        <div class="input-container">
            <textarea asp-for="Content" class="question-input" placeholder="Wpisz treść pytania" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="answers-container">
            @for (int i = 0; i < 4; i++)
            {
                <div class="answer-row">
                    <input type="radio" name="CorrectAnswerIndex" value="@i" id="correct_@i" @(i == 0 ? "checked" : "") required />
                    <input type="text" name="Answers" class="answer-input" placeholder="Odpowiedź @(i + 1)" required />
                </div>
            }
        </div>

        <div class="button-container">
            <button type="submit" class="action-button">
                <span class="material-icons">add_circle</span>
                Dodaj pytanie
            </button>
            <a asp-controller="Quiz" asp-action="Details" asp-route-id="@ViewBag.QuizId" class="action-button">
                <span class="material-icons">arrow_back</span>
                Powrót do quizu
            </a>
        </div>
    </form>
</div>

<style>
    .quiz-container {
        max-width: 800px;
        margin: 100px auto;
        padding: 20px;
    }

    .question-form {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .input-container {
        width: 100%;
    }

    .question-input {
        width: 100%;
        height: 100px;
        padding: 15px;
        background:rgb(233, 230, 221);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: rgb(34, 34, 30);
        font-size: 1.1rem;
        resize: vertical;
    }

    .answers-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .answer-row {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .answer-input {
        flex: 1;
        padding: 15px;
        background: rgb(233, 230, 221);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color:rgb(34, 34, 30);
        font-size: 1.1rem;
    }

    .question-input:focus,
    .answer-input:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.4);
    }

    .question-input::placeholder,
    .answer-input::placeholder {
        color: rgba(34, 34, 30, 0.5);
        font-weight: bold;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .action-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background-color: transparent;
        border: 2px solid #FFFDD0;
        border-radius: 25px;
        color: #FFFDD0;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .action-button:hover {
        background-color: #FFFDD0;
        color: #1a1a1a;
        text-decoration: none;
    }

    .action-button .material-icons {
        font-size: 20px;
    }

    /* Style for radio buttons */
    input[type="radio"] {
        appearance: none;
        -webkit-appearance: none;
        width: 20px;
        height: 20px;
        border: 2px solid #FFFDD0;
        border-radius: 50%;
        outline: none;
        cursor: pointer;
        position: relative;
        transition: all 0.3s ease;
    }

    input[type="radio"]:checked {
        background-color: transparent;
        border-color: #4CAF50;
    }

    input[type="radio"]:checked::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 12px;
        height: 12px;
        background-color: #4CAF50;
        border-radius: 50%;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.9rem;
        margin-top: 5px;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}