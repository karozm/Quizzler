@model MvcPracownicy.Models.Quiz

@{
    ViewData["Title"] = "Quiz Details";
    Layout = "_AuthenticatedLayout";
}

<div class="welcome-banner">
    <div class="banner-content">
        <h1 class="app-title">@Model.Title</h1>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="banner-text">@Model.Description</p>
        }
        <p class="banner-text"><small>Utworzono: @Model.CreatedAt.ToString("dd.MM.yyyy")</small></p>
    </div>
</div>

<div class="quiz-list-container">
    <h2>Pytania</h2>

    @if (ViewBag.IsAdmin)
    {
        <div class="mb-3">
            <a asp-controller="Question" asp-action="Create" asp-route-quizId="@Model.Id" class="quiz-btn">
                <span class="material-icons">add</span>
                Dodaj pytanie
            </a>
        </div>
    }

    @foreach (var question in Model.Questions)
    {
        <div class="quiz-card mb-4">
            <div class="quiz-card-content">
                <h3 class="question-title">
                    <span class="material-icons">help_outline</span>
                    @question.Content
                </h3>
                <div class="answers-list">
                    @foreach (var answer in question.Answers)
                    {
                        <div class="answer-item @(answer.IsCorrect ? "correct-answer" : "")">
                            @answer.Content
                            @if (answer.IsCorrect)
                            {
                                <span class="material-icons">check_circle</span>
                            }
                        </div>
                    }
                </div>
                @if (ViewBag.IsAdmin)
                {
                    <div class="question-actions mt-3">
                        <a asp-controller="Question" asp-action="Edit" asp-route-id="@question.Id" class="quiz-btn">
                            <span class="material-icons">edit</span>
                            Edytuj
                        </a>
                        <a asp-controller="Question" asp-action="Delete" asp-route-id="@question.Id" class="quiz-btn delete"
                            onclick="return confirm('Czy na pewno chcesz usunąć to pytanie?')">
                            <span class="material-icons">delete</span>
                            Usuń
                        </a>
                    </div>
                }
            </div>
        </div>
    }

    <div class="quiz-actions">
        @if (ViewBag.IsAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="quiz-btn">
                <span class="material-icons">edit</span>
                Edytuj quiz
            </a>
        }
        <a asp-action="Index" class="quiz-btn">
            <span class="material-icons">arrow_back</span>
            Powrót do listy
        </a>
    </div>
</div>