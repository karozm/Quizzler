@model MvcPracownicy.Models.Quiz

@{
    ViewData["Title"] = "Quiz Details";
}

<h1>@Model.Title</h1>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><small class="text-muted">Created: @Model.CreatedAt.ToString("d")</small></p>
    </div>
</div>

<h2>Questions</h2>

<div class="mb-3">
    <a asp-controller="Question" asp-action="Create" asp-route-quizId="@Model.Id" class="btn btn-primary">Add Question</a>
</div>

@foreach (var question in Model.Questions)
{
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@question.Content</h5>
                <div class="list-group">
                    @foreach (var answer in question.Answers)
                    {
                            <div class="list-group-item">
                                @answer.Content
                                @if (answer.IsCorrect)
                                {
                                        <span class="badge bg-success float-end">Correct</span>
                                }
                            </div>
                    }
                </div>
                <div class="mt-3">
                    <a asp-controller="Question" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-controller="Question" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Quiz</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div> 