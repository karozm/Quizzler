@model MvcPracownicy.Models.Quiz

@{
    ViewData["Title"] = "Create Quiz";
    Layout = "_AuthenticatedLayout";
}

<div class="quiz-form-container">
    <h1>Create New Quiz</h1>

    <form asp-action="Create" class="quiz-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label">Quiz Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter quiz title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Quiz Description</label>
            <input asp-for="Description" class="form-control" rows="4" placeholder="Enter quiz description" style="min-height: 80px;"></input>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="quiz-form-actions">
            <button type="submit" class="btn-primary">
                <span class="material-icons">add_circle</span>
                Create Quiz
            </button>
            <a asp-action="Index" class="btn-secondary">
                <span class="material-icons">arrow_back</span>
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}