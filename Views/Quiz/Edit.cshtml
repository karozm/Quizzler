
@model MvcPracownicy.Models.Quiz

@{
    ViewData["Title"] = "Edit Quiz";
    Layout = "_AuthenticatedLayout";
}

<div class="quiz-form-container">
    <h1>Edit Quiz</h1>

    <form asp-action="Edit" class="quiz-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="form-group">
            <label asp-for="Title" class="control-label">Quiz Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter quiz title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
    <label asp-for="Description" class="control-label">Quiz Description</label>
    <textarea asp-for="Description" class="form-control" placeholder="Enter quiz description" style="height: 30px; box-sizing: border-box; resize: none;"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>


        <div class="quiz-form-actions">
            <button type="submit" class="btn-primary">
                <span class="material-icons">save</span>
                Save Changes
            </button>
            <a asp-action="Index" class="btn-secondary">
                <span class="material-icons">arrow_back</span>
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
