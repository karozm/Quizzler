@model IEnumerable<MvcPracownicy.Models.Quiz>

@{
    ViewData["Title"] = "Quizzes";
}

<h1>Quizzes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Quiz</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><small class="text-muted">Created: @item.CreatedAt.ToString("d")</small></p>
                    <p class="card-text"><small class="text-muted">Questions: @item.Questions.Count</small></p>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>