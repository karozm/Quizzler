@model MvcPracownicy.Models.Answer

@{
    ViewData["Title"] = "Add Answer";
}

<h1>Add New Answer</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            
            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label">Answer</label>
                <textarea asp-for="Content" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsCorrect" class="form-check-input" />
                    <label asp-for="IsCorrect" class="form-check-label">Is this the correct answer?</label>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Add Answer" class="btn btn-primary" />
                <a asp-controller="Question" asp-action="Edit" asp-route-id="@Model.QuestionId" class="btn btn-secondary">Back to Question</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}