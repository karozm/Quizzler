@model MvcPracownicy.Models.Answer

@{
    ViewData["Title"] = "Delete Answer";
}

<h1>Delete Answer</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this answer?</h3>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Content</h5>
        @if (Model.IsCorrect)
        {
                <span class="badge bg-success">Correct Answer</span>
        }
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Question" asp-action="Edit" asp-route-id="@Model.QuestionId" class="btn btn-secondary">Back to Question</a>
</form> 