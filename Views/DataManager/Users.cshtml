@model IEnumerable<MvcPracownicy.Models.Login>
@{
    ViewData["Title"] = "Zarządzanie Użytkownikami";
    Layout = "_AuthenticatedLayout";
}

<div class="welcome-banner">
    <div class="banner-content">
        <h1 class="app-title">Zarządzanie Użytkownikami</h1>
        <p class="banner-text">Dodawaj i zarządzaj kontami użytkowników w systemie</p>
    </div>
</div>

<div class="quiz-list-container">
    <div class="quiz-card mb-4">
        <div class="quiz-card-content">
            <h3>Dodaj Nowego Użytkownika</h3>
            <form asp-action="AddUser" method="post" class="quiz-form">
                <div class="form-group">
                    <input type="text" class="form-control" name="loginName" placeholder="Login" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Hasło" required>
                </div>
                <button type="submit" class="quiz-btn">
                    <span class="material-icons">person_add</span>
                    Dodaj Użytkownika
                </button>
            </form>
        </div>
    </div>

    <div class="quiz-card">
        <div class="quiz-card-content">
            <h3>Lista Użytkowników</h3>
            <div class="quiz-table">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Login</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.LoginName</td>
                                <td>
                                    <form asp-action="DeleteUser" method="post" class="delete-form">
                                        <input type="hidden" name="id" value="@user.Id">
                                        <button type="submit" class="quiz-btn delete"
                                            onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?')">
                                            <span class="material-icons">delete</span>
                                            Usuń
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>