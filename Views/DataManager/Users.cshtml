@model IEnumerable<MvcPracownicy.Models.Login>
@{
    ViewData["Title"] = "Zarządzanie Użytkownikami";
    Layout = "_AuthenticatedLayout";
}

<div class="quiz-list-container" style="margin-top: -680px;">
    <div class="quiz-header">
        <h1>Zarządzanie Użytkownikami</h1>
    </div>

    <div class="admin-cards-container">
        <div class="quiz-card mb-4">
            <div class="quiz-card-content">
                <h3 class="card-title">Dodaj Nowego Użytkownika</h3>
                <form asp-action="AddUser" method="post" class="quiz-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label>Login</label>
                            <input type="text" class="form-control" name="loginName" required>
                        </div>
                        <div class="form-group">
                            <label>Hasło</label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                    </div>
                    <div class="button-row">
                        <button type="submit" class="quiz-btn">
                            <span class="material-icons">person_add</span>
                            Dodaj Użytkownika
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="quiz-card" style="margin-bottom: 100px;">
            <div class="quiz-card-content">
                <h3 class="card-title">Lista Użytkowników</h3>
                <div class="quiz-table">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Login</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.LoginName</td>
                                    <td class="action-cell">
                                        <form asp-action="DeleteUser" method="post" class="delete-form">
                                            <input type="hidden" name="id" value="@user.Id">
                                            <button type="submit" class="quiz-btn delete" title="Usuń użytkownika"
                                                onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?')">
                                                <span class="material-icons">delete</span>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

