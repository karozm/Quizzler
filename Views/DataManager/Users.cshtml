@model IEnumerable<MvcPracownicy.Models.Login>
@{
    ViewData["Title"] = "User List";
}

<div class="container">
    <h1 class="mb-4">User List</h1>

    <!-- Formularz dodawania użytkownika -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Add New User</h5>
            <form asp-action="AddUser" method="post" class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="loginName" placeholder="Login" required>
                </div>
                <div class="col-md-4">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Add User</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista użytkowników -->
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Login Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.LoginName</td>
                            <td>
                                <form asp-action="DeleteUser" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@user.Id">
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Are you sure you want to delete this user?')">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 