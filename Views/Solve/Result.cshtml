@{
    ViewData["Title"] = "Wynik Quizu";
    Layout = "_AuthenticatedLayout";
}

<div class="welcome-banner">
    <div class="banner-content">
        <h1 class="app-title">Wynik Quizu</h1>
        <p class="banner-text">@ViewData["QuizTitle"]</p>
    </div>
</div>

<div class="quiz-list-container">
    <div class="quiz-card">
        <div class="quiz-card-content text-center">
            <div class="score-display">
                <span class="material-icons" style="font-size: 48px; color: #FFFDD0;">emoji_events</span>
                <h2 class="score-value">@ViewData["Score"]%</h2>
            </div>

            <div class="result-message">
                <span class="material-icons" style="font-size: 36px; color: #FFFDD0;">sentiment_satisfied</span>
                <h3>@ViewData["Message"]</h3>
            </div>

            <div class="quiz-actions mt-4">
                <a asp-action="ViewAnswers" asp-route-id="@TempData["QuizId"]" class="quiz-btn">
                    <span class="material-icons">visibility</span>
                    Zobacz Odpowiedzi
                </a>
                <a asp-action="Index" class="quiz-btn">
                    <span class="material-icons">list</span>
                    Lista Quiz√≥w
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .score-display {
        margin: 2rem 0;
    }

    .score-value {
        font-size: 4rem;
        color: #FFFDD0;
        margin: 1rem 0;
    }

    .result-message {
        margin: 2rem 0;
    }

    .result-message h3 {
        color: #FFFDD0;
        margin-top: 1rem;
    }

    .quiz-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
</style>