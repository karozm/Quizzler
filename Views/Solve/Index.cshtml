@model IEnumerable<MvcPracownicy.Models.Quiz>

@{
    ViewData["Title"] = "Solve Quizzes";
}

<h1>Available Quizzes</h1>

<div class="container">
    @foreach (var quiz in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@quiz.Title</h5>
                @if (!string.IsNullOrEmpty(quiz.Description))
                {
                    <p class="card-text">@quiz.Description</p>
                }
                <p class="card-text"><small class="text-muted">Created: @quiz.CreatedAt.ToString("dd/MM/yyyy")</small></p>
                <a asp-action="Solve" asp-route-id="@quiz.Id" class="btn btn-primary">Solve</a>
            </div>
        </div>
    }
</div> 